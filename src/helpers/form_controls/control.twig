<div class="form-group font-size{{ errors.has(name) ? ' has-error' : '' }}">
    {% if label %} <label for="exampleInputEmail1 " class="font-size">{{ label }}</label>{% endif %}
    <div class="control-container font-size">
        {% include ux("helpers/form_controls/_#{type}.twig") %}
        
        {% if right_holder %}
            <div class="right-holder font-size">
                {{ right_holder }}
            </div>
        {% endif %}

        {% if errors.has(name) %}
            <span class="help-block error-block text-danger font-size ">
                {{ errors.first(name) }}
            </span>
        {% endif %}
        {% if help %}
            <div class="field-help font-size">
                {{ help }}
            </div>
        {% endif %}
    </div>
</div>
