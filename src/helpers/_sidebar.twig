<div class="sub-section">
    <ul class="menu one-line sidebar-menu">
        <li>
            {% for item in items %}
                <div class="col-data pull-left">
                    <a href="{{ item['url'] }}" {% if item['name'] == current_item %} class="current" {% endif %}><i class="{{ item['icon'] }}"></i>
                        {{ item['label'] }}
                    </a>
                </div>
                
                <!--Thêm gạch ngang menu-->
                {% if item['name'] == '_divider_' %}
                    <div class="bottom-menu">
                        <hr>
                    </div>
                {% endif %}
            {% endfor %}
        </li>
    </ul>
</div>

