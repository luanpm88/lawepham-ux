{% if actions %}
    <span class="filter-item ml-lvl2">
        {% for action in actions %}
            {% if action['can'] is not defined or action['can'] == true %}
                <a href="{{ action['url'] }}" class="btn btn-secondary btn-icon-left {% if action['class'] is defined %} {{'modal-control'}} {% endif %}">
                    {{ action['text']|raw }}
                </a>
            {% endif %}
        {% endfor %}
    </span>
{% endif %}


